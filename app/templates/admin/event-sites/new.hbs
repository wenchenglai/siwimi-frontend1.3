<div class="row">
    <div class="col-xs-12 col-md-6">
        <h3>Add New Events Parser Site</h3>

        <form>
            {{input-form label="Site Name" value=model.siteName type="text"}}

            {{input-form label="Url" value=model.url type="text"}}

            {{input-form label="Class Name" value=model.className type="text"}}

            <div class="checkbox">
                <label>
                    {{input checked=model.isActive type="checkbox"}} Is Active?
                </label>
            </div>

            <button {{action 'save' model}} class="btn btn-cys">{{fa-icon 'save'}}</button>
            {{#link-to 'admin.eventSites.list' class="btn btn-default"}}{{fa-icon "times"}}{{/link-to}}
        </form>
    </div>
</div>

