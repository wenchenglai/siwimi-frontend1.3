<div class="row row-xs-height">
    <div class="col-lg-12">
        {{#if showError }}
        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <strong>Error!</strong> {{errorMessage}}
        </div>
        {{/if}}
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-lg-12">
        <h1>Secure Login</h1>
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-lg-12">
        {{! login form; the fields must be named "identification" and "password"; the controller action is "authenticate" }}
        <form {{action 'authenticate' on='submit' }}>
            <div class="form-group">
                <label for="identification">Email</label>
                {{input id='identification' placeholder='Enter Email' class='form-control' value=email}}
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                {{input id='password' placeholder='Enter Password' class='form-control' type='password' value=password}}
            </div>
            <button type="submit" {{action "authenticateCustom" }} class="btn btn-default">Login</button>
            Don't have an account yet?  {{#link-to 'signup' }}Sing up here{{/link-to}}.
        </form>
    </div>
</div>
<div class="row row-xs-height">
    <div class="col-lg-12">
        Login with <a {{ action 'authenticateWithFacebook' }} class="alert-link" style="cursor: pointer;"><i class="fa fa-facebook-square"></i> Facebook</a>
        <!--or <a {{ action 'authenticateWithGooglePlus' }} class="alert-link" style="cursor: pointer;"><i class="fa fa-google-plus-square"></i> Google+</a>.-->
    </div>
</div>